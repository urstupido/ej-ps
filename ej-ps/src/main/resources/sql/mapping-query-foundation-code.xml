<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE queryservice PUBLIC "-//ANYFRAME//DTD QUERYSERVICE//EN"
"http://www.anyframejava.org/dtd/anyframe-core-query-mapping-3.2.dtd">
<queryservice>
	<queries>
		<query id="findCodeInfoByPk">
			<statement>
				SELECT code, code_name
				FROM code
				WHERE code_type = :vo.codeType
			</statement>
			<result class="com.sds.ps.domain.CodeInfo" />
		</query>

		<query id="findCodeInfoList">
			<statement>
				SELECT code_type, code, code_name
				FROM code
				WHERE code_type like :vo.codeType
				order by code
			</statement>
			<result class="com.sds.ps.domain.CodeInfo" />
		</query>
	</queries>
</queryservice>